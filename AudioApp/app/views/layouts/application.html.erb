<!DOCTYPE html>
<html>
  <head>
    <title>OdioApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <nav class="teal lighten-2">
      <div class="nav-wrapper">
        <ul>

        <li><%= link_to("Home", "/") %></li>
        <li><%= link_to("About", "/about") %></li>
        <li><%= link_to("Engineers", "/engineers") %></li>
        <li><%= link_to("Artists", "/artists") %></li>
          <% if @current_user %>
             <li><%= link_to "Log Out", "/logout", method: :delete %></li>
             <li><%= link_to @current_user.email, user_path(@current_user) %></li>
             <li><%= link_to "Edit Profile", edit_user_path(@current_user) %></li>
           <% else %>
             <li><%= link_to "Log In", "/login" %></li>
             <li><%= link_to "Sign Up", "/users/new" %></li>
        <% end %>
        <!-- <li><%#= link_to("All bookings", "/bookings") %></li> -->
        </ul>
      </div>
    </nav>


    <%= yield %>
    </div>
  </body>
</html>
