<div class="container">
  <h1>Login</h1>

  <% if flash[:login_error] %>
  <p>
    <%= flash[:login_error] %>
  </p>
  <% end %>

  <%= form_tag "/login", :class => "pure-form pure-form-stacked" do %>

    <p>
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </p>
    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>

    <%= submit_tag "Login", :class => "pure-button pure-button-primary" %>

  <% end %>
</div>
